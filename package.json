{
  "name": "code-sorting",
  "version": "1.0.4",
  "description": "Code sorting algorithms!",
  "repository": {
    "type": "git"
  },
  "license": "MIT",
  "author": "Yusuke Hayashi <yusuke8h@gmail.com>",
  "main": "dev-server.js",
  "scripts": {
    "build": "webpack --progress --color --mode='production'",
    "fix": "rm -rf node_modules package-lock.json && npm run update && npm run sort && npm i && npm run fmt && npm run lint",
    "fmt": "prettier --write src",
    "lint": "eslint --fix --ext .ts src",
    "serve": "nodemon dev-server.js",
    "sort": "npx sort-package-json",
    "start": "webpack --watch --progress --color",
    "update": "npx npm-check-updates -u"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fmt && npm run lint && npm run build"
    }
  },
  "lint-staged": {
    "*.@ts": [
      "npm run lint",
      "npm run fmt"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "brace": "^0.11.1",
    "d3-selection": "^2.0.0"
  },
  "devDependencies": {
    "@types/d3": "^5.16.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "css-loader": "^5.0.0",
    "eslint": "^7.11.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unicorn": "^23.0.0",
    "express": "^4.17.1",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "mini-css-extract-plugin": "^1.1.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pug": "^3.0.0",
    "pug-loader": "^2.4.0",
    "serve-favicon": "^2.5.0",
    "stylus": "^0.54.8",
    "stylus-loader": "^4.1.1",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.3",
    "webpack": "^5.2.0",
    "webpack-cli": "^4.1.0"
  }
}
